<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>de.brickforce-aurora</groupId>
	<artifactId>launcher</artifactId>
	<version>1.3.3</version>
	<name>BFLauncher</name>

	<properties>
		<java.version>25</java.version>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.build.finalName>launcher</project.build.finalName>
		<project.sourceDir>${project.build.directory}/project-sources</project.sourceDir>
		
		<!-- Dependency versions -->
		<dep.netty.version>4.1.104.Final</dep.netty.version>
		<dep.snowframe.version>0.1.5</dep.snowframe.version>
		<dep.laylib.version>0.4.2-SNAPSHOT</dep.laylib.version>
		<dep.fastutil.version>8.5.18</dep.fastutil.version>
		<dep.clay4j.version>0.1.2</dep.clay4j.version>
	</properties>
	
	<pluginRepositories>
		<pluginRepository>
			<id>lauriichan-release</id>
			<url>https://maven.lauriichan.me/release/</url>
		</pluginRepository>
	</pluginRepositories>
	
	<repositories>
		<repository>
			<id>lauriichan-snapshot</id>
			<url>https://maven.lauriichan.me/snapshot/</url>
		</repository>
		<repository>
			<id>lauriichan-release</id>
			<url>https://maven.lauriichan.me/release/</url>
		</repository>
	</repositories>

	<dependencies>
        <!-- Utilities -->
        <dependency>
            <groupId>it.unimi.dsi</groupId>
            <artifactId>fastutil</artifactId>
            <version>${dep.fastutil.version}</version>
        </dependency>

		<!-- LayLib -->
		<dependency>
            <groupId>me.lauriichan.laylib</groupId>
            <artifactId>command</artifactId>
            <version>${dep.laylib.version}</version>
		</dependency>
		<dependency>
            <groupId>me.lauriichan.laylib</groupId>
            <artifactId>json</artifactId>
            <version>${dep.laylib.version}</version>
		</dependency>

		<!-- SnowFrame -->
		<dependency>
            <groupId>me.lauriichan.snowframe</groupId>
            <artifactId>snowframe-core</artifactId>
            <version>${dep.snowframe.version}</version>
		</dependency>
		<dependency>
            <groupId>me.lauriichan.snowframe</groupId>
            <artifactId>snowframe-signal</artifactId>
            <version>${dep.snowframe.version}</version>
		</dependency>
		<dependency>
            <groupId>me.lauriichan.snowframe</groupId>
            <artifactId>snowframe-config</artifactId>
            <version>${dep.snowframe.version}</version>
		</dependency>
		<dependency>
            <groupId>me.lauriichan.snowframe</groupId>
            <artifactId>snowframe-imgui</artifactId>
            <version>${dep.snowframe.version}</version>
		</dependency>
		<dependency>
            <groupId>me.lauriichan.snowframe</groupId>
            <artifactId>snowframe-util-nbt</artifactId>
            <version>${dep.snowframe.version}</version>
		</dependency>
		<dependency>
            <groupId>me.lauriichan.snowframe</groupId>
            <artifactId>snowframe-util-http</artifactId>
            <version>${dep.snowframe.version}</version>
		</dependency>
	
		<!-- clay4j -->
		<dependency>
			<groupId>me.lauriichan</groupId>
			<artifactId>clay4j</artifactId>
			<version>${dep.clay4j.version}</version>
		</dependency>
	</dependencies>

	<build>
		<finalName>${project.build.finalName}</finalName>
		<resources>
			<resource>
				<filtering>true</filtering>
				<directory>src/main/resources/filtered</directory>
			</resource>
			<resource>
				<filtering>false</filtering>
				<directory>src/main/resources/unfiltered</directory>
			</resource>
			<resource>
				<filtering>false</filtering>
				<excludes>
					<exclude>*.iss</exclude>
					<exclude>latest_launcher.json</exclude>
				</excludes>
				<directory>src/installer/resources</directory>
				<targetPath>${project.build.outputDirectory}/installer</targetPath>
			</resource>
			<resource>
				<filtering>true</filtering>
				<includes>
					<include>*.iss</include>
					<include>latest_launcher.json</include>
				</includes>
				<directory>src/installer/resources</directory>
				<targetPath>${project.build.outputDirectory}/installer</targetPath>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.14.0</version>
				<configuration>
					<source>${java.version}</source>
					<target>${java.version}</target>
					<compilerArgs>
						<arg>-parameters</arg>
					</compilerArgs>
					<annotationProcessors>
						<annotationProcessor>
							me.lauriichan.snowframe.extension.processor.ExtensionProcessor</annotationProcessor>
					</annotationProcessors>
				</configuration>
				<executions>
					<execution>
						<id>compile-processors</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>compile</goal>
						</goals>
						<configuration>
							<proc>none</proc>
							<includes>
								<include>
									de/brickforceaurora/launcher/**/processor/*Processor.java</include>
								<include>
									de/brickforceaurora/maven/**/*.java</include>
							</includes>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>me.lauriichan.maven</groupId>
				<artifactId>maven-source-modification-plugin</artifactId>
				<version>2.0.0</version>
				<executions>
					<execution>
						<id>default-modifySources</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>modifySource</goal>
						</goals>
						<configuration>
							<transformers>
								<transformer>
									<className>
										me.lauriichan.snowframe.maven.ConfigSourceTransformer</className>
								</transformer>
								<transformer>
									<className>
										me.lauriichan.snowframe.maven.SignalHandlerTransformer</className>
								</transformer>
							</transformers>
							<includes>
								<include>**/*Template.java</include>
							</includes>
							<replacements>
								<replacement>
									<regex>true</regex>
									<pattern>(?:.*)(Template)(?:\.java)</pattern>
									<replace></replace>
								</replacement>
							</replacements>
							<copyUnmodifiedFiles>false</copyUnmodifiedFiles>
							<outputDirectory>${project.sourceDir}</outputDirectory>
						</configuration>
					</execution>
					<execution>
						<id>default-deleteSources</id>
						<phase>prepare-package</phase>
						<goals>
							<goal>deleteSources</goal>
						</goals>
						<configuration>
							<includes>
								<include>
									de/brickforceaurora/**/*Template.class</include>
							</includes>
							<purgeEmptyPackages>true</purgeEmptyPackages>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-jar-plugin</artifactId>
				<version>3.4.2</version>
				<configuration>
					<outputDirectory>${project.build.directory}/jar</outputDirectory>
					<archive>
						<manifest>
							<mainClass>de.brickforceaurora.launcher.Main</mainClass>
						</manifest>
					</archive>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-shade-plugin</artifactId>
				<version>3.6.0</version>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>shade</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<filters>
						<filter>
							<artifact>*:*</artifact>
							<excludes>
								<exclude>META-INF/*.SF</exclude>
								<exclude>META-INF/*.DSA</exclude>
								<exclude>META-INF/*.RSA</exclude>
								<exclude>installer/*</exclude>
							</excludes>
						</filter>
					</filters>
					<minimizeJar>false</minimizeJar>
					<outputDirectory>${project.build.directory}/jar</outputDirectory>
					<createDependencyReducedPom>false</createDependencyReducedPom>
					<transformers>
						<transformer
							implementation="me.lauriichan.maven.shade.transformers.AppendingTransformer">
							<pattern>META-INF/extension/*.*</pattern>
						</transformer>
					</transformers>
				</configuration>
				<dependencies>
					<dependency>
						<groupId>me.lauriichan.maven</groupId>
						<artifactId>shade-transformers</artifactId>
						<version>1.1.0</version>
					</dependency>
				</dependencies>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>build-helper-maven-plugin</artifactId>
				<version>3.4.0</version>
				<executions>
					<execution>
						<id>add-modified-source</id>
						<goals>
							<goal>add-source</goal>
						</goals>
						<configuration>
							<sources>
								<source>${project.sourceDir}</source>
							</sources>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	
	<profiles>
		<profile>
			<id>release</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>exec-maven-plugin</artifactId>
						<version>3.5.0</version>
						<executions>
							<execution>
								<id>create-installer</id>
								<phase>verify</phase>
								<goals>
									<goal>exec</goal>
								</goals>
								<configuration>
									<executable>${env.INNO_SETUP_CLI}</executable>
									<arguments>
										<argument>${project.build.directory}/classes/installer/setup.iss</argument>
									</arguments>
								</configuration>
							</execution>
							<execution>
								<id>create-updater</id>
								<phase>verify</phase>
								<goals>
									<goal>exec</goal>
								</goals>
								<configuration>
									<executable>${env.INNO_SETUP_CLI}</executable>
									<arguments>
										<argument>${project.build.directory}/classes/installer/update.iss</argument>
									</arguments>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
</project>